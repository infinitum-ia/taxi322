# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o  # Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
LLM_TEMPERATURE=1.0
LLM_MAX_TOKENS=4096

# Checkpointer Configuration
CHECKPOINTER_TYPE=memory  # Options: memory, postgres, redis

# PostgreSQL (if using PostgresSaver)
POSTGRES_CHECKPOINTER_URL=postgresql://user:pass@localhost:5432/taxi_checkpoints

# Redis (if using RedisSaver)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Taxi Customer Support API
DEBUG=True

# Database (for trip/driver data - optional for MVP)
DATABASE_URL=sqlite:///./taxi.db
